#!/usr/bin/env ruby

TYPES = %w[
  .jpg
  .png
  .webp
  .gif
  .svg ]

dry =
  ARGV.include?('-d') || ARGV.include?('--dry')
as =
  ARGV.include?('-as')
fnames =
  ARGV.select { |a|
    File.exist?(a) &&
    TYPES.find { |t| a.end_with?(t) } }

current = Dir['posts/2*.md']
  .sort
  .last
  .gsub(/[^\d]/, '')

if as

  if fnames.count > 1
    puts "cannot use -as with more than 1 filename"
    exit 1
  end

  fname = fnames.first
  t = "out/images/#{current}_#{ARGV.last}#{File.extname(fname)}"
  siz = `ls -lh #{fname}`.split[4]

  puts " . #{fname} (#{siz}) -->\n     #{t}"
  unless dry
    system("mv #{fname} #{t}")
  end

else

  fnames.each do |fname|
    t = "out/images/#{current}_#{fname}"
    siz = `ls -lh #{fname}`.split[4]
    puts " . #{fname} (#{siz}) -->\n     #{t}"
    unless dry
      system("mv #{fname} #{t}")
    end
  end
end

